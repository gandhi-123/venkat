#include<stdio.h>


/* print star in below format
    *
   **
  ***
 ****
***** 
*/
int main()
{
       int n=0,i=0,j;       
       
       printf("\n no of lines \n");
       scanf("%d",&n);
       
       for (i=1; i <= n; i++)
       {               
              for (j=1; j<=n ; j++)
              {
                       if (j <= n-i)
                               printf(" ");
                       else printf("*");
              }
              printf("\n");
       }

}
